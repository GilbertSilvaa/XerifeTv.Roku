<component name="MoviesScreen" extends="Group">
  <script type="text/brightscript" uri="moviesScreen.brs" />
  
  <interface>
    <field id="screenLimit" type="bool" value="false" alwaysNotify="true"/>
  </interface>

  <children>
    <Label text="Movies Screen"/>

    <RowList 
      id="exampleRowList" 
      translation="[0, 80]" 
      itemComponentName="RowListItem" 
      numRows="4" 
      itemSize="[1200, 210]" 
      rowItemSize="[[210, 210]]" 
      itemSpacing="[0, 40]" 
      showRowLabel="[true]"
      rowItemSpacing="40" 
      drawFocusFeedback="false"
      vertFocusAnimationStyle="fixedFocusWrap" 
      rowFocusAnimationStyle="fixedFocus"/>
  </children>
</component>