<component name="RowListItem" extends="Group">
  <script type="text/brightscript" uri="rowListItem.brs" />

  <interface >
    <field id="itemContent" type="node" onChange="showcontent" />
    <field id="itemHasFocus" type="bool" onChange="OnFocus" />
    <field id="focusPercent" type="Float"/>
  </interface>

  <children >
    <Rectangle 
      id="borderFocus"
      width="186" 
      height="206" 
      color="0xffffff" 
      translation="[0, 0]"/>

    <Poster
      id="itemPoster"
      translation="[3, 3]"
      width="180"
      height="200">
    </Poster>
 
    <Label
      id="itemLabel"
      translation="[20, 264]"
      width="250"
      horizAlign="right"
      opacity="0.0"
      visible="false"/>
  </children>
</component>